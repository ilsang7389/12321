package kr.co.ictedu.mvc.controller.json;

import java.text.SimpleDateFormat;
import java.util.ArrayList;
import java.util.Date;
import java.util.List;
import java.util.Map;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.ResponseBody;

import dto.BoardVO;

@Controller
public class JsonDemoController {
	private List<Map<String, String>> useList;
	public JsonDemoController() {
		useList = new  ArrayList<Map<String,String>>();
	}
	//board/01/ict
	//만약에 반환값이 Object일 경우 Json 타입으로 제공하기 위해서는 pon.xml에 jackson 추가하기
	@GetMapping("/board/{bnum}/{bid}")
	public BoardVO myBlog2(@PathVariable Integer bnum, @PathVariable String bid) {
		BoardVO vo = new BoardVO();
		vo.setBdate(new SimpleDateFormat("yyyy-MM-dd").format(new Date()));
		vo.setContent("하하 호호호");
		vo.setNum(bnum);
		vo.setReip("192.168.0.11");
		vo.setTitle("오늘은 왠지 ㅎㅎ"+bnum);
		vo.setWriter(bid);
		return vo;
	}
	
	
	/*
	 * @GetMapping("/board/{bnum}/{bid}")
	 * 
	 * @ResponseBody public BoardVO myBlog2(@PathVariable Integer
	 * bnum, @PathVariable String bid) { BoardVO vo = new BoardVO(); vo.setBdate(new
	 * SimpleDateFormat("yyyy-MM-dd").format(new Date())); vo.setContent("하하 호호호");
	 * vo.setNum(bnum); vo.setReip("192.168.0.11"); vo.setTitle("오늘은 왠지 ㅎㅎ"+bnum);
	 * vo.setWriter(bid); return vo; }
	 */
}
